{
    "manifest_version": 2,
    "name": "scripts test",
    "description": "Understand how message passing works",
    "version": "1.1,",
    "background":{
        "scripts": ["bg.js"]
    },
    "browser_action":{
        "default_icon": "icon.png",
        "default_title": "Notifier",
        "default_popup": "index.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["cs.js"]
        }
    ],
    "page_action": {
        "default_icon": "icon.png"
    },
    "permissions": ["notifications"]
}
